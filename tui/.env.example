# AiiDA Infrastructure Configuration
# Copy this file to .env and customize for your environment

# PostgreSQL Configuration
POSTGRES_USER=aiida_user
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=aiida_crystal_tui
POSTGRES_PORT=5432
POSTGRES_INITDB_ARGS=-c max_connections=200 -c shared_buffers=256MB

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=aiida_user
RABBITMQ_DEFAULT_PASS=changeme_strong_password
RABBITMQ_DEFAULT_VHOST=/aiida
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# AiiDA Profile Configuration
AIIDA_PROFILE_NAME=crystal-tui
AIIDA_DAEMON_ENABLED=true

# =============================================================================
# Materials Project API Configuration
# =============================================================================

# Materials Project API Key (required for mp-api client)
# Get your key at: https://materialsproject.org/api
MP_API_KEY=your_api_key_here

# MPContribs API Key (defaults to MP_API_KEY if not set)
# MPCONTRIBS_API_KEY=

# OPTIMADE endpoint (Materials Project)
OPTIMADE_MP_BASE_URL=https://optimade.materialsproject.org

# Cache TTL in days (default: 30)
MATERIALS_CACHE_TTL_DAYS=30
